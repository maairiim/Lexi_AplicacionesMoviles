<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:viewBindingIgnore="true"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/gradiant_pantalla_introduccion"
    >

  

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="35dp"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:backgroundTint="@color/azul_button"
            app:srcCompat="?attr/actionModeCloseDrawable" />
        <TextView
            android:text="@string/bienvenido"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="40sp"

            android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"/>
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:background="@drawable/round"
            android:text="@string/basico" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:background="@drawable/round"
            android:text="@string/intermedio" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:background="@drawable/round"
            android:text="@string/avanzado" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/round"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="match_parent" android:layout_weight="1">

        <ListView
            android:id="@+id/listaNivelesBienvenida"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tema"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:stretchColumns="1">

        <TableRow>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:src="@drawable/negocios"
                android:background="@drawable/gradiantb1"
                android:scaleType="centerInside"
                android:layout_marginStart="20dp"
                />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:src="@drawable/peliculas"
                android:background="@drawable/gradiant4"
                android:scaleType="centerInside"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="70dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/negocio"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pelise"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginStart="50dp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:src="@drawable/deportes"
                android:background="@drawable/gradiantb2"
                android:scaleType="centerInside"
                android:layout_marginStart="20dp"
                />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:src="@drawable/musica"
                android:background="@drawable/gradiantb3"
                android:scaleType="centerInside"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="70dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deporte"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/musica"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginStart="50dp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:src="@drawable/gastronomia"
                android:background="@drawable/gradiant5"
                android:scaleType="centerInside"
                android:layout_marginStart="20dp"
                />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:src="@drawable/historia"
                android:background="@drawable/gradiantb1"
                android:scaleType="centerInside"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="70dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gastro"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/histo"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginStart="50dp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:src="@drawable/moda"
                android:background="@drawable/gradiant4"
                android:scaleType="centerInside"
                android:layout_marginStart="20dp"
                />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:src="@drawable/tradiciones"
                android:background="@drawable/gradiantb2"
                android:scaleType="centerInside"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="70dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/moda"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tradi"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginStart="50dp"/>
        </TableRow>





    </TableLayout>





</LinearLayout>
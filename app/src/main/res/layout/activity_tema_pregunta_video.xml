<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/azul_button"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backbuttontema"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/tv_nivel_10"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="@string/n10"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </LinearLayout>

    <VideoView
        android:id="@+id/mVideoView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="45dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="@string/titulo"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/buttontextopregunta"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_baseline_menu_24" />

        </TableRow>

    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:text="@string/pregunta"
                android:textSize="25dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/azul_button"
                        android:text="Opcíón 1"
                        android:textAlignment="center"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="100dp"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/azul_button"
                        android:text="Opcíón 2"
                        android:textSize="25dp" />
                </TableRow>

                <TableRow android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/azul_button"
                        android:text="Opcíón 3"
                        android:textAlignment="center"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="100dp"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/azul_button"
                        android:text="Opcíón 4"
                        android:textSize="25dp" />
                </TableRow>


            </TableLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
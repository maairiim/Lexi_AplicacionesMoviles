<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/gradiant_pantalla_introduccion"
    android:layout_height="match_parent"
    tools:context=".IntroduccionActivity"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:layout_width="86dp"
            android:layout_height="53dp"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/imageView" android:backgroundTint="@color/azul_button"/>
        <TextView
            android:text="@string/introduccion"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="40sp"

            android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_margin="25dp"

        android:background="@drawable/round"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="273dp"
            android:layout_height="385dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:text="@string/lorem"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="270dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_blue_roundcorner"
            android:text="@string/continuar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>